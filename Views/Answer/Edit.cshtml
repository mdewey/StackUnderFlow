@model StackUnderFlow.Models.Answer

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AnswerText" class="control-label"></label>
                <input asp-for="AnswerText" class="form-control" />
                <span asp-validation-for="AnswerText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeAnswered" class="control-label"></label>
                <input asp-for="TimeAnswered" class="form-control" />
                <span asp-validation-for="TimeAnswered" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpVote" class="control-label"></label>
                <input asp-for="UpVote" class="form-control" />
                <span asp-validation-for="UpVote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DownVote" class="control-label"></label>
                <input asp-for="DownVote" class="form-control" />
                <span asp-validation-for="DownVote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsCorrectAnswer" /> @Html.DisplayNameFor(model => model.IsCorrectAnswer)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserId" class="control-label"></label>
                <select asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId"></select>
                <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionId" class="control-label"></label>
                <select asp-for="QuestionId" class="form-control" asp-items="ViewBag.QuestionId"></select>
                <span asp-validation-for="QuestionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

